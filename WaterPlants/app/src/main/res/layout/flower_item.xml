<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#DACCFFFF"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="1dp"
    android:layout_centerInParent="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
   >



            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/flower_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/def_user"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />


    <TextView
        android:id="@+id/flower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/flower_image"
        android:layout_toRightOf="@id/flower_image"
        android:text="nume"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />


    <ImageView
        android:id="@+id/calV"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/flower_name"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/flower_image"
        android:src="@drawable/ic_today_black_24dp" />
    <TextView
        android:id="@+id/last_wt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/calV"
        android:layout_below="@id/flower_name"
        android:text="Data"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/last_wt"
        android:layout_below="@id/flower_name"
        android:text="  Ultima udare"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/calI"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="109dp"
        android:layout_toRightOf="@id/last_wt"
        android:layout_below="@id/flower_name"
        android:src="@drawable/ic_cached_black_24dp"

        />
    <TextView
        android:id="@+id/inT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/calI"
        android:layout_below="@id/flower_name"
        android:text="int"
        android:textSize="14dp"
        android:textColor="@color/colorPrimaryDark"/>


</RelativeLayout>
</android.support.v7.widget.CardView>